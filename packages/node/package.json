{
  "name": "@airnode/node",
  "scripts": {
    "build": "./node_modules/.bin/tsc",
    "start": "node dist/index.js",
    "prettify": "prettier --write ./src/**/*.{js,ts}",
    "lint": "eslint ./src/**/*.{js,ts}",
    "precommit": "lint-staged"
  },
  "devDependencies": {
    "@types/node": "^14.0.12",
    "@typescript-eslint/eslint-plugin": "^3.2.0",
    "@typescript-eslint/parser": "^3.2.0",
    "eslint": "^7.2.0",
    "lint-staged": "^10.2.9",
    "prettier": "^2.0.5",
    "typescript": "^3.9.5"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "npm run prettify",
      "npm run lint"
    ]
  }
}
