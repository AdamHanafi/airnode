{
  "name": "airnode",
  "scripts": {
    "bootstrap": "npm install && lerna bootstrap",
    "build": "lerna run build",
    "prettify": "prettier --write ./**/*.{js,ts}",
    "lint": "eslint . --ext .js,.ts && lerna run lint",
    "dev:aws": "(cd packages/node && serverless offline --config serverless.aws.yml)"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^3.2.0",
    "@typescript-eslint/parser": "^3.2.0",
    "eslint": "^7.2.0",
    "husky": "^4.2.5",
    "lerna": "^3.22.1",
    "lint-staged": "^10.2.11",
    "prettier": "^2.0.5",
    "typescript": "^3.9.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts}": [
      "npm run prettify",
      "npm run lint"
    ]
  }
}
