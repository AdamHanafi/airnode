{
  "name": "airnode",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git://github.com/api3dao/airnode.git"
  },
  "scripts": {
    "bootstrap": "yarn install && lerna bootstrap",
    "build": "lerna run build --stream",
    "build:adapter": "(cd packages/adapter && yarn run build)",
    "build:deployer": "(cd packages/deployer && yarn run build)",
    "build:protocol": "(cd packages/protocol && yarn run build)",
    "build:node": "(cd packages/node && yarn run build)",
    "build:ois": "(cd packages/ois && yarn run build)",
    "clean": "lerna run clean --stream",
    "dev:aws": "(cd packages/node && serverless offline --config serverless.local.yml)",
    "docker:build": "docker build . -t airnode-alpha",
    "docker:run:deploy": "(cd packages/deployer && docker run -it --rm --env-file .env --env ACTION=deploy -v $(pwd):/airnode/out airnode-alpha:latest)",
    "docker:run:remove-airnode": "(cd packages/deployer && docker run -it --rm --env-file .env --env ACTION=remove-airnode -v $(pwd):/airnode/out airnode-alpha:latest)",
    "docker:run:remove-mnemonic": "(cd packages/deployer && docker run -it --rm --env-file .env --env ACTION=remove-mnemonic -v $(pwd):/airnode/out airnode-alpha:latest)",
    "invoke:aws": "(cd packages/node && serverless invoke local --function start --config serverless.local.yml)",
    "lint": "yarn run lint:eslint && yarn run lint:solhint",
    "lint:eslint": "eslint . --ext .js,.ts",
    "lint:solhint": "solhint ./**/*.sol",
    "prettify": "prettier --write ./**/*.{js,ts} --loglevel silent",
    "pretty-quick": "pretty-quick --staged --pattern \"**/*.*(js|ts)\"",
    "test": "lerna run test --stream",
    "test:adapter": "(cd packages/adapter && yarn run test)",
    "test:adapter:watch": "(cd packages/adapter && yarn run test:watch)",
    "test:protocol": "(cd packages/protocol && yarn run test)",
    "test:node": "(cd packages/node && yarn run test)",
    "test:node:watch": "(cd packages/node && yarn run test:watch)"
  },
  "dependencies": {
    "@types/node": "^14.10.2",
    "lerna": "^3.22.1",
    "rimraf": "^3.0.2",
    "typescript": "^4.0.2"
  },
  "devDependencies": {
    "@types/jest": "^26.0.13",
    "@typescript-eslint/eslint-plugin": "^4.1.1",
    "@typescript-eslint/parser": "^4.1.1",
    "eslint": "^7.9.0",
    "husky": "^4.3.0",
    "jest": "^26.4.2",
    "prettier": "^2.1.2",
    "pretty-quick": "^3.0.2",
    "solhint": "^3.2.0",
    "ts-jest": "^26.3.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn run pretty-quick && yarn run lint"
    }
  }
}
